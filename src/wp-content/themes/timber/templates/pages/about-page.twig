{% block html_head_container %}
    {% include 'html-header.twig' %}
    <link rel="stylesheet" href="{{ site.theme.link }}/static/style/about-page.css">
    </head>
{% endblock %}

<body class="{{body_class}}">
<div class="aboutPage" style="background-image: url('{{ site.theme.link }}/images/wall.jpg');">
    <header>
        {% include 'mdf-menu.twig' %}
    </header>
    {% for post in posts %}
        <article id="post-{{post.ID}}" class="entry {{post.class}}">
            <div class="entry-content">
                <h1 class="aboutPage-title">{{ post.title }}</h1>
                <div class="aboutPage-content">{{post.content}}</div>
            </div>
        </article>
    {% endfor %}
</div>

<script src="{{ site.theme.link }}/static/js/navigation.js"></script>

{% block footer %}
    <footer id="footer">
        {% include 'footer.twig' %}
    </footer>
    {{ function('wp_footer') }}
{% endblock %}
</body>
</html>
